{
  "name": "@unsync/nodejs-tools",
  "type": "module",
  "version": "1.0.2",
  "description": "Shared tools for my projects",
  "license": "MIT",
  "repository": "unsync/nodejs-tools",
  "main": "dist/index.js",
  "files": [
    "dist",
    "scripts/postinstall.cjs"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsc",
    "checkdeps": "ncu",
    "checkdeps:apply": "ncu -u",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "exit 0",
    "prepare": "husky",
    "postinstall": "node scripts/postinstall.cjs"
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "logform": "^2.6.0",
    "npm-check-updates": "^16.14.14",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.11.9",
    "@unsync/eslint": "^1.0.21",
    "@unsync/tsconfig": "1.0.9",
    "husky": "^9.0.6",
    "lint-staged": "^15.2.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{js,ts,vue,json}": "eslint --fix ."
  }
}
